@model IEnumerable<autofin.Models.t_detalleFactura>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.t_facturas.NumeroFactura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.t_productos.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.t_facturas.NumeroFactura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.t_productos.Nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idDetalle }) |
            
        </td>
    </tr>
}

</table>
